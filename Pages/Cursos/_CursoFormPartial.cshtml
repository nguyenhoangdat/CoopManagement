@model CoopManagement.ViewsModels.CursoViewModel
@using CoopManagement.ViewsModels

<div class="card shadow mb-4">
    <div class="card-body">
        <form method="post">
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="@Model.Nome" class="control-label"></label>
                    <input asp-for="@Model.Nome" class="form-control" />
                    <span asp-validation-for="@Model.Nome" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="@Model.Grau" class="control-label"></label>
                    <select asp-for="@Model.Grau" class="form-control" asp-items="Html.GetEnumSelectList<GrauViewModel>()">
                        <option selected disabled>Selecionar</option>
                    </select>
                    <span asp-validation-for="@Model.Grau" class="text-danger"></span>
                </div>
            </div>
            <div class="text-right">
                <a class="btn btn-secondary" asp-page="./Index">
                    <i class="fa fa-arrow-left text-white-50"></i>
                    Voltar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-check text-white-50"></i>
                    Salvar
                </button>
            </div>
        </form>
    </div>
</div>
