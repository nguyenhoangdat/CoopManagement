@model CoopManagement.ViewsModels.CursoDetailsViewModel

<div class="card shadow mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Grau)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Grau)
            </dd>
        </dl>
        <div class="text-right">
            <a asp-page="./Index" type="button" class="btn btn-secondary">
                <i class="fa fa-arrow-left text-white-50"></i>
                Voltar
            </a>
            <a type="button" class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Id">
                <i class="fa fa-pencil-alt text-white-50"></i>
                Editar
            </a>
            <button type="submit" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
                <i class="far fa-trash-alt text-white-50"></i>
                Deletar
            </button>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-danger" id="exampleModalLabel">
                    Excluir curso
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h5>Tem certeza que deseja excluir este curso?</h5>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    <i class="fa fa-times text-white-50"></i>
                    Cancelar
                </button>
                <form method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="far fa-trash-alt text-white-50"></i>
                        Excluir
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
