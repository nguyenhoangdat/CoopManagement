@page
@model CoopManagement.Pages.Cursos.IndexModel

@{
    ViewData["Title"] = "Cursos";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="row wrapper white-bg page-heading">
                <div class="col-lg-12">
                    <div class="d-sm-flex align-items-center justify-content-between mb-2">
                        <h2 class="h3 mb-0 text-gray-800">Cursos</h2>
                        <div class="btn-group">
                            <a class="d-none d-sm-inline-block btn btn-primary btn-sm shadow-sm" asp-page="Create">
                                <i class="fa fa-plus fa-sm text-white-50"></i>
                                Cadastrar
                            </a>
                            <button type="button" class="d-none d-sm-inline-block btn btn-primary btn-sm shadow-sm dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Ativos</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr>
        </div>
    </div>

    @if (Model.Cursos.Count == 0)
    {
        <div class="vertical-center justify-content-center">
            <h4 class="text-muted" align="center">
                Não há cursos cadastrados no sistema <br />
                <a asp-page="Create" class="btn btn-link">
                    <i class="fa fa-plus"></i>
                    Cadastrar primeiro
                </a>
            </h4>
        </div>
    }
    else
    {
        <div class="card shadow mb-4">
            <div class="card-body">
                <div class="table-responsive">
                    <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <table class="table border">
                            <thead class="thead-light">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Cursos[0].Nome)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Cursos[0].Grau)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Cursos)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nome)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Grau)
                                        </td>
                                        <td class="text-right">
                                            <a class="btn btn-sm btn-secondary" asp-page="./Details" asp-route-id="@item.Id" title="Detalhes">
                                                <i class="fa fa-search"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
