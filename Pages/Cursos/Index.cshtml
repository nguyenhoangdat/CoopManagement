@page
@model CoopManagement.Pages.Cursos.IndexModel

@{
    ViewData["Title"] = "Cursos";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2>Cursos</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-page="/Index">Home</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Cursos</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    @if (Model.Cursos.Count == 0)
    {
        <div class="vertical-center justify-content-center">
            <h4 class="text-muted" align="center">
                Não há cursos cadastrados no sistema <br />
                <a asp-page="Create" class="btn btn-link">
                    <i class="fa fa-plus"></i>
                    Cadastrar primeiro
                </a>
            </h4>
        </div>
    }
    else
    {
        <div class="ibox">
            <div class="ibox-content">
                <div class="row form-group">
                    <div class="ibox-title">
                        <a asp-page="Create" class="btn btn-primary">
                            <i class="fa fa-plus"></i>
                            Novo curso
                        </a>
                    </div>
                </div>
                <table class="table border">
                    <thead class="thead-light">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Cursos[0].Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cursos[0].Grau)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Cursos)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Grau)
                                </td>
                                <td class="text-right">
                                    <a class="btn btn-secondary" asp-page="./Edit" asp-route-id="@item.Id" title="Editar">
                                        <i class=" fa fa-pencil-alt"></i>
                                    </a>
                                    <a class="btn btn-secondary" asp-page="./Details" asp-route-id="@item.Id" title="Detalhes">
                                        <i class=" fa fa-search"></i>
                                    </a>
                                    <a class="btn btn-secondary" asp-page="./Delete" asp-route-id="@item.Id" title="Excluir">
                                        <i class=" far fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
