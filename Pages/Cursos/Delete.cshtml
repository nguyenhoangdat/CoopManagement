@page
@model CoopManagement.Pages.Cursos.DeleteModel

@{
    ViewData["Title"] = "Cursos";
}

<h1>@ViewData["Title"]</h1>

<h3>Tem certeza que deseja deletar este curso?</h3>
<div>
    <h4>Deletar curso</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Curso.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Curso.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Curso.Grau)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Curso.Grau)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Curso.Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-page="./Index">Voltar</a>
    </form>
</div>
