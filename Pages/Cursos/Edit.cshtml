@page
@model CoopManagement.Pages.Cursos.EditModel
@using CoopManagement.Models.Cursos

@{
    ViewData["Title"] = "Cursos";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2>Cursos</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-page="/Index">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-page="/Cursos/Index">Cursos</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Editar curso</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-12">
            <div class="ibox">
                <div class="ibox-content">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="form-group col-6">
                                <label asp-for="CursoVM.Nome" class="control-label"></label>
                                <input asp-for="CursoVM.Nome" class="form-control" />
                                <span asp-validation-for="CursoVM.Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group col-6">
                                <label asp-for="CursoVM.Grau" class="control-label"></label>
                                <select asp-for="CursoVM.Grau" class="form-control" asp-items="Html.GetEnumSelectList<Grau>()">
                                    <option selected disabled>Selecionar</option>
                                </select>
                                <span asp-validation-for="CursoVM.Grau" class="text-danger"></span>
                            </div>
                        </div>
                        <input type="hidden" asp-for="CursoVM.Id" />
                        <a class="btn btn-secondary" asp-page="./Index">
                            <i class="fa fa-arrow-left"></i>
                            Voltar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-check"></i>
                            Salvar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
