@page
@model CoopManagement.Pages.Cursos.DetailsModel

@{
    ViewData["Title"] = "Cursos";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2>Cursos</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-page="/Index">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-page="/Cursos/Index">Cursos</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Detalhes do curso</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="ibox">
        <div class="ibox-content">
            <div>
                <h4>Detalhes do curso</h4>
                <hr />
                @{ await Html.RenderPartialAsync("_CursoDetalhesPartial", Model.CursoVM); }
                <a class="btn btn-secondary" asp-page="./Index">
                    <i class="fa fa-arrow-left"></i>
                    Voltar
                </a>
                <a type="button" class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.CursoVM.Id">
                    <i class="fa fa-pencil-alt"></i>
                    Editar
                </a>
            </div>
        </div>
    </div>
</div>
