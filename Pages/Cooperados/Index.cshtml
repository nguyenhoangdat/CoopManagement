@page
@model CoopManagement.Pages.Cooperados.IndexModel

<style>
    .id-cooperado {
        cursor: pointer;
    }

    .content {
        width: 100%;
        height: 60vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>

@{
    ViewData["Title"] = "Cooperados";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            @{ await Html.RenderPartialAsync("_HeaderPartial.cshtml"); }
        </div>
    </div>

    @if (Model.Cooperados.Count == 0)
    {
        <div class="middle-box content">
            <h4 class="text-muted" align="center">
                Não há cooperados ativos cadastrados no sistema <br />
                <a asp-page="Create" class="btn btn-link">
                    <i class="fa fa-plus"></i>
                    Cadastrar primeiro
                </a>
            </h4>
        </div>
    }
    else
    {
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Cooperados ativos</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <table class="table table-hover border">
                            <thead class="thead-light">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Cooperados[0].Nome)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Cooperados[0].Matricula)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Cooperados[0].DataMatricula)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Cooperados[0].StatusMatricula)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Cooperados)
                                {
                                    <tr class="id-cooperado" data-cooperado="@item.Id">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nome)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Matricula)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DataMatricula)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.StatusMatricula)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script>
    $(".id-cooperado").click(function () {
        const id_cooperado = $(this).data('cooperado');
        window.location.href = "/Cooperados/Details?id=" + id_cooperado
    });
</script>
