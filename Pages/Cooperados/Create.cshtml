@page
@model CoopManagement.Pages.Cooperados.CreateModel
@using CoopManagement.ViewsModels

@{
    ViewData["Title"] = "Cooperados";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2>Cooperados</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-page="/Index">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-page="/Cooperados/Index">Cooperados</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Novo cooperado</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-12">
            <div class="ibox">
                <div class="ibox-content">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="form-group col-6">
                                <label asp-for="Cooperado.Nome" class="control-label"></label>
                                <input asp-for="Cooperado.Nome" class="form-control" />
                                <span asp-validation-for="Cooperado.Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group col-6">
                                <label asp-for="Cooperado.Sexo" class="control-label"></label><br />
