{% extends 'base.html.twig' %}

{% block title %}Desligados{% endblock %}

{% block stylesheets %}

    <style>
        .mensagem {
            height:100px;
            position:absolute;
            top:50%;
            left:50%;
            margin-left:-100px;
            color: grey;
        }
    </style>

{% endblock %}

{% block body %}

    <div class="container">
        <h2>Cooperados desligados</h2>

        <hr class="col-md-12 mb-3">

        <nav class="nav">
            <a class="nav-link" href="/cooperado/novos">Novas matrículas</a><br><br>
            <a class="nav-link" href="/cooperado/lista">Listar</a><br><br>
            <a class="nav-link" href="/cooperado/desligados">Desligados</a><br><br>
            <a class="nav-link" href="/usuario">Voltar</a><br><br>
        </nav>

        {% if cooperados %}
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Matrícula</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Curso</th>
                        <th scope="col">Data de Desligamento</th>
                        <th scope="col">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {% for cooperado in cooperados %}
                        <tr>
                            <th scope="row">{{ cooperado.getId() }}</th>
                            <td>{{ cooperado.getNome() }}</td>
                            <td>{{ cooperado.getCurso().getNome() }}</td>
                            <td>{{ cooperado.getDataMatricula()|date('d/m/Y') }}</td>
                            <td><button class="btn btn-outline-secondary">Ficha</button></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}

        {% if not cooperados %}
            <h5 class="mensagem">Não existem cooperados desligados</h5>
        {% endif %}
    </div>

{% endblock %}