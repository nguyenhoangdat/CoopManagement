{% extends 'base.html.twig' %}

{% block title %}Cursos{% endblock %}

{% block body %}

    <div class="container">
        <h2>Cursos</h2>

        <hr class="col-md-12 mb-3">

        <nav class="nav">
            <a class="nav-link active" href="/curso">Cursos</a>
            <a class="nav-link" href="/curso/cadastrar">Cadastrar curso</a>
            <a class="nav-link" href="/usuario">Voltar</a>
        </nav>

        <table class="table table-hover">
            <form action="/curso/editar" method="POST">
                <thead>
                    <tr>
                        <th scope="col">Nome</th>
                        <th scope="col">Grau</th>
                        <th scope="col">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {% for curso in cursos %}
                        <input type="hidden" value="{{ curso.getId() }}" name="id">
                        <tr>
                            <td>{{ curso.getNome() }}</td>
                            <td>{{ curso.getGrau() }}</td>
                            <td>
                                <button class="btn btn-outline-secondary" id="{{ curso.getId() }}" name="{{ curso.getId() }}" type="submit">Editar</button>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </form>
        </table>
    </div>

{% endblock %}